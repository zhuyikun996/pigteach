@import "../../component/viewpager/viewpager.wxss";
.recommendteacher {
    margin-top: 20px;
    margin-left: 20px;
}

.tip {
    font-size: 20px;
    font-weight: bold;
}


/* 名师推荐list --bengin-- */

.teacherList {
    margin-top: 20px;
}

.teacherItem {
    margin-left: 5px;
    height: 116px;
    display: flex;
    flex-direction: row;
}

.teacherImg {
    width: 110px;
    height: 110px;
}

.img_item {
    width: 110px;
    height: 110px;
    border-radius: 5%;
}

.teacherTitleAndIntro {
    display: flex;
    flex-direction: column;
    margin-top: 6px;
    margin-left: 10px;
}


/* 图片右侧 -标题- */

.txt_item_title {
    margin-left: 20px;
    font-weight: bold;
}


/* 图片右侧 -名师姓名- */

.txt_item_author {
    margin-top: 12px;
    margin-left: 20px;
    font-size: 12px;
    color: #949393;
}


/* 图片右侧 -名师介绍- */

.txt_item_intro {
    margin-top: 12px;
    margin-left: 20px;
    margin-right: 5px;
    font-size: 12px;
    color: #949393;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}


/* 名师推荐list --end-- */

.selectionclass {
    margin-top: 20px;
    margin-left: 20px;
}


/* 精选好课list --bengin-- */

.classList {
    margin-top: 20px;
}

.classItem {
    margin-left: 5px;
    height: 200px;
    display: flex;
    flex-direction: column;
}


/* 课程标题左侧标签：高中 */

.classTag {
    background: #949393;
    color: aliceblue;
    font-size: 14px;
    padding: 3px 10px;
    border-radius: 5px;
}

.classTitle {
    margin-left: 10px;
    font-weight: bold;
    font-size: 18px;
}

.classPropertyNumberView {
    margin-top: 12px;
}

.classPropertyNumber {
    background: #FFEAE6;
    color: #FE7434;
    font-size: 14px;
    padding: 3px 10px;
    border-radius: 5px;
}


/* 精选好课item整体布局 里边包括左边：教师pic和name，右边 课程价格（免费）和已有xx人报名 */

.teacherAndPriceView {
    margin-top: 30px;
    height: 70px;
    display: flex;
}


/* 教师头像和姓名  居左 */

.teacherPicAndNameView {
    display: flex;
    flex-direction: column;
    width: 50px;
}


/* 精选好课 - 老师的照片 */

.teacherPic {
    width: 50px;
    height: 50px;
    border-radius: 50px;
}

.teacherNameView {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.teacherName {
    margin-top: 5px;
    font-size: 12px;
    color: #949393;
}


/* 课程价格和报名人数 */

.rightView {
    margin-right: 20px;
    position: absolute;
    right: 0;
    height: 70px;
}

.priceAndStuNumber {
    display: flex;
    flex-direction: column;
}

.classPrice {
    text-align: right;
    font-size: 20px;
    color: #FE7434;
    font-weight: bold;
}

.stuNumber {
    margin-top: 20px;
    font-size: 12px;
    color: #949393
}

.greyLine {
    margin-top: 30px;
    background-color: #f5f2f2;
    height: 1px;
    margin-right: 10px;
}