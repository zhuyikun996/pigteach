/* pages/adpage/adpage.wxss */

.ad_popError {
  background: #de352d;
  color: #fff;
  height: 70rpx;
  line-height: 58rpx;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 3;
}

.banner {
  display: flex;
  justify-content: center;
}

image {
  /* border-radius: 18%; *//* margin-left: 20px;
  margin-right: 20px; */
  width: 100%;
}

.getInfoTitle {
  display: flex;
  justify-content: center;
  color: #666;
  margin-top: 10px;
  margin-bottom: 20px;
  height: 28px;
}

.msgGray {
  /* 设置字体垂直居中 */
  line-height: 28px;
  /* 控制文本水平方向居中 */
  text-align: center;
}

/* 中间强调文字：1对1陪练 样式 */

.msgRed {
  color: red;
  font-size: 28px;
  /* 设置字体垂直居中 */
  line-height: 28px;
  /* 控制文本水平方向居中 */
  text-align: center;
}

/* 统一设置输入框和按钮的距离屏幕边缘距离为20px */

.getInfoInputBox {
  padding-left: 20px;
  padding-right: 20px;
  margin-top: 10px;
}

.inputInfoChildName {
  background-color: #f3f3f3;
  padding: 10px;
  margin-top: 10px;
  border-radius: 5px;
  font-size: 16px;
}

.inputInfoPhoneNumber {
  background-color: #f3f3f3;
  padding: 10px;
  margin-top: 10px;
  border-radius: 5px;
  font-size: 16px;
}

/* "立即报名" 按钮 */

.btnGetClass {
  margin-top: 20px;
  color: white;
  background-color: #fa341d;
}

/*"立即报名" 按钮点击态*/

.btnGetClass-hover {
  background-color: #fd5d05;
}

.inforSecurityTips {
  display: flex;
  justify-content: center;
}

.inforSecurityTips text {
  color: #f89763;
  font-size: 12px;
  margin-top: 8px;
  text-decoration: underline;
}

.introArea {
  display: flex;
  /* 排列方式为竖向排列 */
  flex-direction: column;
  justify-content: center;
  margin-top: 40px;
  padding-left: 20px;
  padding-right: 20px;
}

/* "师资力量or课程简介" */

.introAreaTitle {
  color: #666;
  font-size: 26px;
  /* 设置字体垂直居中 */
  line-height: 28px;
  /* 控制文本水平方向居中 */
  text-align: center;
}

.introAreaContent {
  background: #fd5d05;
  margin-top: 10px;
  border-radius: 5px;
  padding: 5px;
  color: white;
  font-size: 16px;
  line-height: 30px;
}

.promissInfo {
  background-color: #f3f3f3;
  display: flex;
  /* 排列方式为竖向排列 */
  flex-direction: column;
  justify-content: center;
  margin-top: 30px;
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 20px;
  padding-bottom: 20px;
}

/* "我们的承诺" */

.promissInfoTitle {
  color: #666;
  font-size: 26px;
  /* 设置字体垂直居中 */
  line-height: 28px;
  /* 控制文本水平方向居中 */
  text-align: center;
}

/* "服务承诺" */

.servicePromissTitle {
  color: #ebb27c;
  margin-top: 10px;
  font-size: 20px;
}

.servicePromissContent {
  margin-top: 10px;
  color: #666;
  font-size: 14px;
}

/* "退款承诺" */

.refundPromissTitle {
  color: #ebb27c;
  margin-top: 20px;
  font-size: 20px;
}

.refundPromissContent {
  margin-top: 10px;
  color: #666;
  font-size: 14px;
}

.callMe {
  display: flex;
  /* 排列方式为竖向排列 */
  flex-direction: column;
  justify-content: center;
  margin-top: 30px;
  margin-bottom: 30px;
}

/* "客服热线：13465912653" */

.callThePhone {
  color: #fd5d05;
  font-size: 26px;
  /* 设置字体垂直居中 */
  line-height: 28px;
  /* 控制文本水平方向居中 */
  text-align: center;
  font-size: 14px;
}

.bottom-view {
  display: flex;
  flex-direction: row;
}

/* "立即报名"按钮 */

.btnGetClassBottom {
  color: white;
  background-color: #fd5d05;
  border-radius: 0px;
  flex: 1;
  margin-right: 1px;
}

/* "告诉朋友"按钮 */

.shareBottom {
  color: white;
  background-color: #fd5d05;
  border-radius: 0px;
  flex: 1;
}
